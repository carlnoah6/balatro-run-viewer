[Unit]
Description=Balatro Run Viewer API
After=network.target

[Service]
Type=simple
User=ubuntu
WorkingDirectory=/home/ubuntu/.openclaw/workspace/projects/balatro-run-viewer
ExecStart=/usr/bin/python3 -m uvicorn app.main:app --host 127.0.0.1 --port 8191
Restart=on-failure
RestartSec=5
Environment=PYTHONUNBUFFERED=1

[Install]
WantedBy=multi-user.target
